<div class="flex items-center justify-center min-h-screen bg-gray-900">
  <div class="w-full max-w-md p-4 space-y-6">
    <%= render "shared/logo" %>
    <h2 class="text-2xl font-bold text-center text-white">Create Your Account</h2>

    <%= form_with(model: @user, url: signup_path, class: "space-y-4", data: { turbo: false }) do |form| %>
      
      <!-- Display validation errors -->
      <% if @user.errors.any? %>
        <div class="p-3 bg-red-700 text-white rounded-md">
          <ul class="list-disc list-inside space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <li class="text-sm"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :username, "Username", class: "block text-sm font-medium text-gray-200" %>
        <%= form.text_field :username, class: "mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Choose a username" %>
      </div>

      <div>
        <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-200" %>
        <%= form.email_field :email, class: "mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "you@example.com" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium text-gray-200" %>
        <%= form.password_field :password, class: "mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <p class="mt-1 text-xs text-gray-400">Must be at least 8 characters with uppercase, lowercase, digit, and special character</p>
      </div>

      <div>
        <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-200" %>
        <%= form.password_field :password_confirmation, class: "mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.submit "Create Account", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer mt-8" %>
      </div>
    <% end %>

    <!-- Link to login -->
    <div class="text-center">
      <p class="text-sm text-gray-400">
        Already have an account?
        <%= link_to "Log in here", login_path, class: "text-indigo-400 hover:text-indigo-300 font-medium" %>
      </p>
    </div>
  </div>
</div>
