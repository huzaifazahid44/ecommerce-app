<div class="min-h-screen bg-gray-900 text-white px-4 flex items-center justify-center">
  <div class="max-w-6xl w-full bg-gray-800 rounded-lg shadow-lg p-8 md:p-12">
    <h1 class="text-3xl font-bold mb-6">Thank you for your purchase!</h1>
    <% if @cart %>
      <p class="mb-6 text-gray-300">Your order has been placed and your cart has been marked as paid.</p>
      <div class="mb-6">
        <div class="font-semibold text-lg mb-2">Order Summary:</div>
        <ul class="divide-y divide-gray-700">
          <% @cart.cart_items.includes(:product).each do |item| %>
            <li class="flex justify-between py-2">
              <span class="text-gray-200"><%= item.product.name %> <span class="text-gray-400">x <%= item.quantity %></span></span>
              <span class="font-medium"><%= number_to_currency(item.product.price * item.quantity) %></span>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="mb-8 flex justify-between items-center text-lg font-semibold border-t border-gray-700 pt-4">
        <span>Total:</span>
        <span class="text-indigo-400 text-xl"><%= number_to_currency(@cart.cart_items.includes(:product).sum { |item| item.product.price * item.quantity }) %></span>
      </div>
    <% else %>
      <p class="mb-6">We could not find your order details, but your payment was successful.</p>
    <% end %>
    <div class="flex justify-center">
      <%= link_to 'Continue Shopping', products_path, class: 'inline-block px-6 py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-semibold transition' %>
    </div>
  </div>
</div>
