<div class="min-h-screen py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between mb-8">
      <div>
        <%= render "shared/logo" if lookup_context.exists?("shared/logo") %>
        <h1 class="text-3xl font-bold text-white mt-2">Products</h1>
        <p class="text-sm text-gray-300 mt-1">Browse our catalog</p>
      </div>

      <div class="flex items-center space-x-3">
        <% if current_user&.admin? %>
          <%= link_to "New Product", new_product_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <%= render @products %>
    </div>
  </div>
</div>
  </div>
</div>
