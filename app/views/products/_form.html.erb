<%= form_with model: product, class: "space-y-5" do |form| %>

  <% if product.errors.any? %>
    <div class="p-3 bg-red-700 text-white rounded-md">
      <ul class="list-disc list-inside space-y-1">
        <% product.errors.full_messages.each do |message| %>
          <li class="text-sm"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Product Name", class: "block text-sm font-medium text-gray-200" %>
    <%= form.text_field :name,
          class: "mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
          placeholder: "e.g. Ray-Ban Aviators" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-200" %>
    <%= form.text_area :description, rows: 4,
          class: "mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
          placeholder: "Describe the product..." %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= form.label :price, class: "block text-sm font-medium text-gray-200" %>
      <%= form.number_field :price, step: "0.01", min: "0",
            class: "mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
            placeholder: "0.00" %>
    </div>

    <div>
      <%= form.label :stock_quantity, "Stock", class: "block text-sm font-medium text-gray-200" %>
      <%= form.number_field :stock_quantity, min: "0",
            class: "mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
            placeholder: "0" %>
    </div>
  </div>

  <div>
    <%= form.label :image, class: "block text-sm font-medium text-gray-200" %>
    <% if product.persisted? && product.image.attached? %>
      <div class="my-2">
        <%= image_tag product.image, class: "rounded-md h-24 object-contain" %>
        <p class="text-xs text-gray-400 mt-1">Upload a new image to replace the current one.</p>
      </div>
    <% end %>
    <%= form.file_field :image,
          accept: "image/*",
          class: "mt-1 block w-full text-sm text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-indigo-600 file:text-white hover:file:bg-indigo-700 cursor-pointer" %>
  </div>

  <div class="flex items-center space-x-3 pt-2">
    <%= form.submit product.persisted? ? "Update Product" : "Create Product",
          class: "inline-flex justify-center py-2 px-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
    <%= link_to "Cancel", product.persisted? ? product_path(product) : products_path,
          class: "text-sm text-gray-400 hover:text-gray-200 hover:underline" %>
  </div>

<% end %>
