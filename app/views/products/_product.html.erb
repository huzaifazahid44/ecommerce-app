<div id="<%= dom_id(product) %>" class="border rounded-lg overflow-hidden shadow-sm bg-gray-900 border-gray-700">
    <div class="h-48 bg-gray-800 flex items-center justify-center">
      <% if product.image.attached? %>
        <%= link_to product_path(product) do %>
          <%= image_tag product.image.variant(resize_to_limit: [600, 600]), class: "object-contain h-48 w-full" %>
        <% end %>
      <% else %>
        <%= link_to product_path(product) do %>
          <div class="text-sm text-gray-400 p-4">No image</div>
        <% end %>
      <% end %>
    </div>

    <div class="p-4">
      <h3 class="text-lg font-semibold text-white">
        <%= link_to product.name, product_path(product), class: "hover:underline" %>
      </h3>
      <p class="text-sm text-gray-300 mt-2"><%= truncate(product.description, length: 120) %></p>
      <div class="mt-3 flex items-center justify-between">
        <span class="text-lg font-semibold text-indigo-400"><%= product.formatted_price %></span>
        <%= link_to "View", product_path(product), class: "text-sm text-indigo-300 hover:underline" %>
      </div>
    </div>
  </div>
 
