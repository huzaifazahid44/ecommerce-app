<%= turbo_frame_tag dom_id(product) do %>
<div class="border rounded-lg overflow-hidden shadow-sm bg-gray-900 border-gray-700 flex flex-col h-full">
    <div class="h-48 bg-gray-800 flex items-center justify-center">
      <% if product.image.attached? %>
        <%= link_to product_path(product), data: { turbo_frame: "_top" } do %>
          <%= image_tag product.image, class: "object-cover h-48 w-full" %>
        <% end %>
      <% else %>
        <%= link_to product_path(product), data: { turbo_frame: "_top" } do %>
          <div class="text-sm text-gray-400 p-4">No image</div>
        <% end %>
      <% end %>
    </div>

    <div class="p-4 flex-1 flex flex-col justify-between">
      <h3 class="text-lg font-semibold text-white">
        <%= link_to product.name, product_path(product), data: { turbo_frame: "_top" }, class: "hover:underline" %>
      </h3>
      <p class="text-sm text-gray-300 mt-2"><%= truncate(product.description, length: 120) %></p>
      <div class="mt-3 flex items-center justify-between">
        <span class="text-lg font-semibold text-indigo-400"><%= product.formatted_price %></span>
        <%= link_to "View", product_path(product), data: { turbo_frame: "_top" }, class: "text-sm text-indigo-300 hover:underline" %>
      </div>

      <% if current_user&.admin? %>
        <div class="mt-3 pt-3 border-t border-gray-700 flex items-center gap-3">
          <%= link_to "Edit", edit_product_path(product),
                data: { turbo_frame: "_top" },
                class: "text-xs text-indigo-400 hover:underline" %>
          <%= link_to "Delete", product_path(product),
                data: { turbo_method: :delete, turbo_confirm: "Delete #{product.name}?", turbo_frame: "_top" },
                class: "text-xs text-red-400 hover:underline" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

