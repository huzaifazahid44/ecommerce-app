<%# product: product, quantity: quantity %>
<div class="flex items-center gap-3">
  <div class="text-sm text-white">In cart: <span class="font-semibold"><%= quantity %></span></div>
  <div class="text-xs text-gray-400">(max 5)</div>
  <div>
    <%= button_to 'Remove', cart_items_path(product_id: product.id), method: :delete, form: { data: { turbo: true } }, class: 'text-xs text-red-400' %>
  </div>
</div>
