<%= turbo_frame_tag dom_id(@product) do %>
<div class="min-h-screen flex items-start justify-center py-32">
  <div class="w-full max-w-6xl px-4">
    <div class="bg-gray-900 rounded-xl shadow-xl overflow-hidden text-white">
      <div class="md:flex md:items-stretch">
        <div class="md:w-1/2 bg-gray-800 flex items-center justify-center p-6">
          <% if @product.image.attached? %>
            <%= image_tag @product.image, class: "object-cover w-full h-96 rounded-lg shadow-md" %>
          <% else %>
            <div class="w-full h-96 rounded-lg bg-gray-700 flex items-center justify-center text-gray-400">No image available</div>
          <% end %>
        </div>

      <div class="md:w-1/2">
        <h2 class="text-2xl font-semibold"><%= @product.name %></h2>
        <p class="text-indigo-400 text-lg mt-2"><%= @product.formatted_price %></p>
        <p class="text-gray-300 mt-4"><%= simple_format(@product.description) %></p>

          <div class="mt-8 flex flex-wrap items-center gap-3">
            <% if current_user&.admin? %>
              <%= link_to "Edit", edit_product_path(@product),
                    data: { turbo_frame: "_top" },
                    class: "inline-flex items-center px-4 py-2 rounded-md text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
              <%= link_to "Delete", product_path(@product),
                    data: { turbo_method: :delete, turbo_confirm: "Delete #{@product.name}? This cannot be undone.", turbo_frame: "_top" },
                    class: "inline-flex items-center px-4 py-2 rounded-md text-sm font-medium text-white bg-red-600 hover:bg-red-700" %>
            <% end %>

            <%= link_to "Back to products", products_path,
                  data: { turbo_frame: "_top" },
                  class: "text-sm text-gray-400 hover:text-gray-200 hover:underline" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
