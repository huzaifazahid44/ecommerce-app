<div class="min-h-screen flex items-start justify-center py-32">
  <div class="w-full max-w-6xl px-4">
    <div class="bg-gray-900 rounded-xl shadow-xl overflow-hidden text-white">
      <div class="md:flex md:items-stretch">
        <div class="md:w-1/2 bg-gray-800 flex items-center justify-center p-6">
          <% if @product.image.attached? %>
            <%= image_tag @product.image.variant(resize_to_limit: [1200, 1200]), class: "object-cover w-full h-96 rounded-lg shadow-md" %>
          <% else %>
            <div class="w-full h-96 rounded-lg bg-gray-700 flex items-center justify-center text-gray-400">No image available</div>
          <% end %>
        </div>

        <div class="md:w-1/2 p-12">
          <h1 class="text-3xl font-bold"><%= @product.name %></h1>
          <p class="text-indigo-400 text-2xl mt-3"><%= @product.formatted_price %></p>
          <div class="text-gray-300 mt-6 space-y-4"><%= simple_format(@product.description) %></div>

          <div class="mt-8 flex items-center space-x-3">
            <%= link_to "Back to products", products_path, class: "text-sm text-gray-300 hover:underline" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
