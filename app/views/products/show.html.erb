<div class="max-w-3xl mx-auto p-6 bg-gray-900 rounded-lg shadow-lg text-white">
    <div class="flex flex-col md:flex-row gap-6">
      <div class="md:w-1/2 bg-gray-800 flex items-center justify-center p-4 rounded">
        <% if @product.image.attached? %>
          <%= image_tag @product.image.variant(resize_to_limit: [800, 800]), class: "object-contain w-full h-72" %>
        <% else %>
          <div class="text-gray-400">No image available</div>
        <% end %>
      </div>

      <div class="md:w-1/2">
        <h2 class="text-2xl font-semibold"><%= @product.name %></h2>
        <p class="text-indigo-400 text-lg mt-2"><%= @product.formatted_price %></p>
        <p class="text-gray-300 mt-4"><%= simple_format(@product.description) %></p>

        <div class="mt-6 flex items-center space-x-3">
          <%= button_to "Add to Cart", cart_items_path(product_id: @product.id), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
          <%= link_to "Close", products_path, class: "text-sm text-gray-300 hover:underline" %>
        </div>
      </div>
    </div>
  </div>
